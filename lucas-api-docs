                <!-- Webhooks -->
                <section id="webhooks" class="mb-20">
                    <h2 class="text-2xl font-bold text-white mb-6 flex items-center gap-3">
                        <span class="w-8 h-8 rounded-lg bg-purple-500/10 border border-purple-500/20 flex items-center justify-center">
                            <i class="fa-solid fa-bolt text-purple-400 text-sm"></i>
                        </span>
                        Webhooks
                    </h2>
                    
                    <p class="text-gray-400 mb-8">
                        Receive real-time notifications when events occur. LUCAS sends POST requests to your configured endpoints with event data.
                    </p>
                    
                    <!-- Event Types -->
                    <h3 class="text-lg font-semibold text-white mb-4">Event Types</h3>
                    
                    <div class="bg-lucas-card border border-lucas-border rounded-xl overflow-hidden mb-8">
                        <table class="w-full">
                            <thead>
                                <tr class="border-b border-lucas-border">
                                    <th class="px-5 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Event</th>
                                    <th class="px-5 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Description</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-lucas-border">
                                <tr>
                                    <td class="px-5 py-4"><code class="text-sm font-mono text-lucas-green">proof.completed</code></td>
                                    <td class="px-5 py-4 text-sm text-gray-400">A new LUCAS Proof is ready</td>
                                </tr>
                                <tr>
                                    <td class="px-5 py-4"><code class="text-sm font-mono text-lucas-green">proof.anchored</code></td>
                                    <td class="px-5 py-4 text-sm text-gray-400">Proof hash written to blockchain</td>
                                </tr>
                                <tr>
                                    <td class="px-5 py-4"><code class="text-sm font-mono text-lucas-green">asset.score_changed</code></td>
                                    <td class="px-5 py-4 text-sm text-gray-400">Asset condition score updated</td>
                                </tr>
                                <tr>
                                    <td class="px-5 py-4"><code class="text-sm font-mono text-lucas-green">issue.detected</code></td>
                                    <td class="px-5 py-4 text-sm text-gray-400">New issue found during inspection</td>
                                </tr>
                                <tr>
                                    <td class="px-5 py-4"><code class="text-sm font-mono text-lucas-green">issue.resolved</code></td>
                                    <td class="px-5 py-4 text-sm text-gray-400">Issue marked as fixed</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    
                    <!-- Webhook Payload -->
                    <h3 class="text-lg font-semibold text-white mb-4">Example Payload</h3>
                    
                    <div class="code-block bg-lucas-card border border-lucas-border rounded-xl overflow-hidden relative">
                        <div class="px-5 py-3 border-b border-lucas-border flex items-center justify-between">
                            <span class="text-xs font-mono text-gray-500">json</span>
                            <button class="copy-btn text-xs text-gray-500 hover:text-white transition flex items-center gap-1">
                                <i class="fa-regular fa-copy"></i>
                                Copy
                            </button>
                        </div>
                        <pre class="p-5 overflow-x-auto text-sm leading-relaxed"><code>{
  <span class="code-property">"event"</span>: <span class="code-string">"proof.completed"</span>,
  <span class="code-property">"timestamp"</span>: <span class="code-string">"2024-12-05T14:32:00Z"</span>,
  <span class="code-property">"data"</span>: {
    <span class="code-property">"proof_id"</span>: <span class="code-string">"PROOF-2024-0847"</span>,
    <span class="code-property">"asset_id"</span>: <span class="code-string">"asset_marina_1205"</span>,
    <span class="code-property">"condition_score"</span>: <span class="code-number">94</span>,
    <span class="code-property">"issues_found"</span>: <span class="code-number">1</span>
  }
}</code></pre>
                    </div>
