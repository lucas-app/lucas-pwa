<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LUCAS - Business Plan</title>
    <meta name="robots" content="noindex, nofollow">
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Urbanist:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2"></script>
    
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        
        body {
            font-family: 'Urbanist', -apple-system, sans-serif;
            background: #050505;
            color: white;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .container {
            width: 100%;
            max-width: 420px;
            padding: 24px;
        }
        
        /* Gate Screen */
        .gate-screen {
            text-align: center;
        }
        
        .logo {
            width: 80px;
            height: 80px;
            background: #deff9a;
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 24px;
        }
        
        .logo svg {
            width: 48px;
            height: 48px;
        }
        
        h1 {
            font-size: 28px;
            font-weight: 700;
            margin-bottom: 8px;
        }
        
        .subtitle {
            color: #6b7280;
            font-size: 15px;
            margin-bottom: 32px;
        }
        
        .form-group {
            margin-bottom: 16px;
            text-align: left;
        }
        
        label {
            display: block;
            font-size: 14px;
            color: #9ca3af;
            margin-bottom: 8px;
        }
        
        input {
            width: 100%;
            padding: 16px;
            background: #1a1a1a;
            border: 1px solid #262626;
            border-radius: 12px;
            color: white;
            font-size: 16px;
            font-family: inherit;
            outline: none;
            transition: border-color 0.2s;
        }
        
        input:focus {
            border-color: #deff9a;
        }
        
        input::placeholder {
            color: #4b5563;
        }
        
        .btn {
            width: 100%;
            padding: 16px;
            background: #deff9a;
            color: #050505;
            border: none;
            border-radius: 12px;
            font-size: 16px;
            font-weight: 700;
            font-family: inherit;
            cursor: pointer;
            transition: transform 0.2s, opacity 0.2s;
            margin-top: 8px;
        }
        
        .btn:hover {
            opacity: 0.9;
        }
        
        .btn:active {
            transform: scale(0.98);
        }
        
        .btn:disabled {
            background: #333;
            color: #666;
            cursor: not-allowed;
        }
        
        .error {
            background: rgba(239, 68, 68, 0.1);
            border: 1px solid rgba(239, 68, 68, 0.3);
            color: #ef4444;
            padding: 12px;
            border-radius: 8px;
            font-size: 14px;
            margin-bottom: 16px;
            display: none;
        }
        
        .error.show {
            display: block;
        }
        
        .footer {
            margin-top: 32px;
            text-align: center;
            color: #4b5563;
            font-size: 12px;
        }
        
        .footer a {
            color: #deff9a;
            text-decoration: none;
        }
        
        /* Document Screen */
        .doc-screen {
            display: none;
            width: 100%;
            max-width: 900px;
        }
        
        .doc-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 24px;
            padding-bottom: 24px;
            border-bottom: 1px solid #262626;
        }
        
        .doc-title {
            display: flex;
            align-items: center;
            gap: 16px;
        }
        
        .doc-title .logo {
            width: 48px;
            height: 48px;
            border-radius: 12px;
            margin: 0;
        }
        
        .doc-title .logo svg {
            width: 28px;
            height: 28px;
        }
        
        .doc-title h2 {
            font-size: 20px;
            font-weight: 700;
        }
        
        .doc-title span {
            color: #6b7280;
            font-size: 14px;
        }
        
        .doc-actions {
            display: flex;
            gap: 12px;
        }
        
        .btn-secondary {
            padding: 12px 20px;
            background: #1a1a1a;
            color: white;
            border: 1px solid #262626;
            border-radius: 10px;
            font-size: 14px;
            font-weight: 600;
            font-family: inherit;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 8px;
            transition: background 0.2s;
        }
        
        .btn-secondary:hover {
            background: #262626;
        }
        
        .pdf-container {
            background: #1a1a1a;
            border-radius: 16px;
            overflow: hidden;
            aspect-ratio: 8.5/11;
            max-height: 80vh;
        }
        
        .pdf-container iframe {
            width: 100%;
            height: 100%;
            border: none;
        }
        
        .pdf-placeholder {
            width: 100%;
            height: 100%;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            color: #6b7280;
            gap: 16px;
        }
        
        .pdf-placeholder svg {
            width: 64px;
            height: 64px;
            opacity: 0.5;
        }
        
        .access-info {
            margin-top: 24px;
            padding: 16px;
            background: #1a1a1a;
            border-radius: 12px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size: 13px;
            color: #6b7280;
        }
        
        .access-info .user {
            display: flex;
            align-items: center;
            gap: 8px;
        }
        
        .access-info .user-email {
            color: #deff9a;
        }
        
        /* Confidential Badge */
        .confidential {
            display: inline-flex;
            align-items: center;
            gap: 6px;
            background: rgba(239, 68, 68, 0.1);
            color: #ef4444;
            padding: 6px 12px;
            border-radius: 6px;
            font-size: 11px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        
        /* Loading spinner */
        .spinner {
            width: 20px;
            height: 20px;
            border: 2px solid #333;
            border-top-color: #deff9a;
            border-radius: 50%;
            animation: spin 0.8s linear infinite;
            display: inline-block;
        }
        
        @keyframes spin {
            to { transform: rotate(360deg); }
        }
        
        /* Responsive */
        @media (max-width: 640px) {
            .doc-header {
                flex-direction: column;
                gap: 16px;
                align-items: flex-start;
            }
            
            .doc-actions {
                width: 100%;
            }
            
            .btn-secondary {
                flex: 1;
                justify-content: center;
            }
        }
    </style>
</head>
<body>
    <div class="container gate-screen" id="gateScreen">
        <div class="logo">
            <img src="icon-192.png" alt="LUCAS" style="width: 100%; height: 100%; border-radius: 20px;">
        </div>
        
        <h1>Business Plan</h1>
        <p class="subtitle">Enter your details to access the confidential document</p>
        
        <div class="error" id="errorMsg"></div>
        
        <form id="accessForm">
            <div class="form-group">
                <label for="email">Email Address</label>
                <input type="email" id="email" placeholder="you@company.com" required>
            </div>
            
            <div class="form-group">
                <label for="password">Access Code</label>
                <input type="password" id="password" placeholder="Enter access code" required>
            </div>
            
            <button type="submit" class="btn" id="submitBtn">
                Access Document
            </button>
        </form>
        
        <div class="footer">
            <p>This document is confidential.</p>
            <p style="margin-top: 8px;">Questions? <a href="mailto:diego@lucas.app">diego@lucas.app</a></p>
        </div>
    </div>
    
    <div class="container doc-screen" id="docScreen">
        <div class="doc-header">
            <div class="doc-title">
                <div class="logo">
                    <img src="icon-192.png" alt="LUCAS" style="width: 100%; height: 100%; border-radius: 12px;">
                </div>
                <div>
                    <h2>LUCAS Business Plan</h2>
                    <span>Confidential â€¢ Q1 2025</span>
                </div>
            </div>
            
            <div class="doc-actions">
                <button class="btn-secondary" onclick="downloadPDF()">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
                        <polyline points="7 10 12 15 17 10"/>
                        <line x1="12" y1="15" x2="12" y2="3"/>
                    </svg>
                    Download PDF
                </button>
            </div>
        </div>
        
        <div class="pdf-container" id="pdfContainer">
            <div class="pdf-placeholder">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
                    <polyline points="14 2 14 8 20 8"/>
                    <line x1="16" y1="13" x2="8" y2="13"/>
                    <line x1="16" y1="17" x2="8" y2="17"/>
                    <polyline points="10 9 9 9 8 9"/>
                </svg>
                <p>Loading document...</p>
            </div>
        </div>
        
        <div class="access-info">
            <div class="user">
                <span>Viewing as:</span>
                <span class="user-email" id="userEmail"></span>
            </div>
            <div class="confidential">
                <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="3" y="11" width="18" height="11" rx="2" ry="2"/>
                    <path d="M7 11V7a5 5 0 0 1 10 0v4"/>
                </svg>
                Confidential
            </div>
        </div>
    </div>

    <script data-cfasync="false" src="/cdn-cgi/scripts/5c5dd728/cloudflare-static/email-decode.min.js"></script><script>
        // ============================================
        // CONFIGURATION - EDIT THESE VALUES
        // ============================================
        const ACCESS_PASSWORD = 'lucas2025';  // Change this to your password
        const PDF_URL = 'LUCAS_Business_Plan.pdf';  // Your PDF file path
        const NOTIFY_EMAIL = 'diego@lucas.app';  // Where to send notifications
        
        // Email notification webhook (use Resend, Make.com, or Zapier)
        // Set to null to disable notifications
        const EMAIL_WEBHOOK_URL = null;  // e.g., 'https://api.resend.com/emails' or your Make.com webhook
        const RESEND_API_KEY = null;  // Your Resend API key (if using Resend)
        
        // Supabase config (using your existing setup)
        const SUPABASE_URL = 'https://irztntmenxchzicfegid.supabase.co';
        const SUPABASE_ANON_KEY = 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6ImlyenRudG1lbnhjaHppY2ZlZ2lkIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NjQxMTA4ODQsImV4cCI6MjA3OTY4Njg4NH0.EjaO-HXjzElo_eHqEWzagsqGg-gEVqUxY1ri-MhofPw';
        
        const supabase = window.supabase.createClient(SUPABASE_URL, SUPABASE_ANON_KEY);
        
        // ============================================
        // APP LOGIC
        // ============================================
        const gateScreen = document.getElementById('gateScreen');
        const docScreen = document.getElementById('docScreen');
        const accessForm = document.getElementById('accessForm');
        const errorMsg = document.getElementById('errorMsg');
        const submitBtn = document.getElementById('submitBtn');
        const userEmailSpan = document.getElementById('userEmail');
        const pdfContainer = document.getElementById('pdfContainer');
        
        let currentUserEmail = '';
        
        // Check if already authenticated (session storage)
        const savedEmail = sessionStorage.getItem('lucas_doc_email');
        if (savedEmail) {
            currentUserEmail = savedEmail;
            showDocument();
        }
        
        // Form submission
        accessForm.addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const email = document.getElementById('email').value.trim();
            const password = document.getElementById('password').value;
            
            // Reset error
            errorMsg.classList.remove('show');
            
            // Validate password
            if (password !== ACCESS_PASSWORD) {
                errorMsg.textContent = 'Invalid access code. Please try again.';
                errorMsg.classList.add('show');
                return;
            }
            
            // Show loading
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<span class="spinner"></span> Verifying...';
            
            try {
                // Log access to Supabase
                await logAccess(email);
                
                // Save to session
                sessionStorage.setItem('lucas_doc_email', email);
                currentUserEmail = email;
                
                // Show document
                showDocument();
                
            } catch (err) {
                console.error('Error logging access:', err);
                // Still show document even if logging fails
                sessionStorage.setItem('lucas_doc_email', email);
                currentUserEmail = email;
                showDocument();
            }
        });
        
        // Log access to Supabase
        async function logAccess(email) {
            const { error } = await supabase
                .from('document_access')
                .insert([{
                    email: email,
                    document: 'business_plan',
                    accessed_at: new Date().toISOString(),
                    user_agent: navigator.userAgent,
                    referrer: document.referrer || null
                }]);
            
            if (error) {
                console.error('Supabase error:', error);
            }
            
            // Send email notification
            await sendNotification(email, 'view');
        }
        
        // Send email notification
        async function sendNotification(visitorEmail, action) {
            if (!EMAIL_WEBHOOK_URL) return;
            
            const timestamp = new Date().toLocaleString('en-US', { 
                timeZone: 'America/Mexico_City',
                dateStyle: 'medium',
                timeStyle: 'short'
            });
            
            try {
                // If using Resend directly
                if (RESEND_API_KEY) {
                    await fetch('https://api.resend.com/emails', {
                        method: 'POST',
                        headers: {
                            'Authorization': `Bearer ${RESEND_API_KEY}`,
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({
                            from: 'LUCAS <notifications@lucas.app>',
                            to: NOTIFY_EMAIL,
                            subject: `ðŸ“„ Business Plan ${action === 'download' ? 'Downloaded' : 'Viewed'}: ${visitorEmail}`,
                            html: `
                                <div style="font-family: sans-serif; max-width: 500px;">
                                    <h2 style="color: #111;">Document ${action === 'download' ? 'Downloaded' : 'Accessed'}</h2>
                                    <p><strong>Email:</strong> ${visitorEmail}</p>
                                    <p><strong>Action:</strong> ${action === 'download' ? 'Downloaded PDF' : 'Viewed document'}</p>
                                    <p><strong>Time:</strong> ${timestamp}</p>
                                    <hr style="border: none; border-top: 1px solid #eee; margin: 20px 0;">
                                    <p style="color: #666; font-size: 12px;">
                                        <a href="https://supabase.com/dashboard/project/irztntmenxchzicfegid/editor/document_access">View all access logs â†’</a>
                                    </p>
                                </div>
                            `
                        })
                    });
                } 
                // If using Make.com/Zapier webhook
                else {
                    await fetch(EMAIL_WEBHOOK_URL, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({
                            visitor_email: visitorEmail,
                            action: action,
                            document: 'business_plan',
                            timestamp: timestamp,
                            notify_email: NOTIFY_EMAIL
                        })
                    });
                }
            } catch (err) {
                console.error('Notification error:', err);
            }
        }
        
        // Show document screen
        function showDocument() {
            gateScreen.style.display = 'none';
            docScreen.style.display = 'block';
            userEmailSpan.textContent = currentUserEmail;
            
            // Embed PDF
            pdfContainer.innerHTML = `
                <iframe 
                    src="${PDF_URL}#toolbar=0&navpanes=0" 
                    title="LUCAS Business Plan"
                    loading="lazy"
                ></iframe>
            `;
        }
        
        // Download PDF
        function downloadPDF() {
            // Log download
            logDownload();
            
            // Trigger download
            const link = document.createElement('a');
            link.href = PDF_URL;
            link.download = 'LUCAS_Business_Plan.pdf';
            link.click();
        }
        
        // Log download event
        async function logDownload() {
            try {
                await supabase
                    .from('document_access')
                    .insert([{
                        email: currentUserEmail,
                        document: 'business_plan',
                        action: 'download',                        accessed_at: new Date().toISOString()
                    }]);
                
                // Send download notification
                await sendNotification(currentUserEmail, 'download');
            } catch (err) {
                console.error('Error logging download:', err);
            }
        }
    </script>
</body>
</html>
